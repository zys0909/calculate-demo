<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    tools:ignore="SpUsage,HardcodedText,DisableBaselineAlignment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:context=".ui.calculate.CalculateActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#EEEEEE"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:divider="#EEEEEE"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/calculate_tip_style"
                    android:text="利用率" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/m1"
                    style="@style/calculate_edit_style"
                    android:text="1.2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:divider="#EEEEEE"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/calculate_tip_style"
                    android:text="灭火" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/m2"
                    style="@style/calculate_edit_style"
                    android:text="1.3" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#EEEEEE"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:divider="#EEEEEE"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/calculate_tip_style"
                    android:text="产能" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/m3"
                    style="@style/calculate_edit_style"
                    android:text="2.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:divider="#EEEEEE"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/calculate_tip_style"
                    android:text="表扬" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/m4"
                    style="@style/calculate_edit_style"
                    android:text="1.5" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#EEEEEE"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:divider="#EEEEEE"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/calculate_tip_style"
                    android:text="满意度" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/m5"
                    style="@style/calculate_edit_style"
                    android:text="1.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:divider="#EEEEEE"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/calculate_tip_style"
                    android:text="轻收" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/m6"
                    style="@style/calculate_edit_style"
                    android:text="2" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#EEEEEE"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:divider="#EEEEEE"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/calculate_tip_style"
                    android:text="销售" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/m7"
                    style="@style/calculate_edit_style"
                    android:text="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:divider="#EEEEEE"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/calculate_tip_style"
                    android:text="基数" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/m8"
                    style="@style/calculate_edit_style"
                    android:text="1200" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#EEEEEE"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="25dp"
            android:paddingEnd="15dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绩效 = "
                android:textColor="#333333"
                android:textSize="18dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_merits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#333333"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#EEEEEE"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:divider="#EEEEEE"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/calculate_tip_style"
                    android:text="底薪" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/p1"
                    style="@style/calculate_edit_style"
                    android:text="2620" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:divider="#EEEEEE"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/calculate_tip_style"
                    android:text="佣金" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/p2"
                    style="@style/calculate_edit_style"
                    android:text="9000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#EEEEEE"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:divider="#EEEEEE"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/calculate_tip_style"
                    android:text="餐补" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/p3"
                    style="@style/calculate_edit_style"
                    android:text="990" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:divider="#EEEEEE"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/calculate_tip_style"
                    android:text="优秀奖" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/p4"
                    style="@style/calculate_edit_style"
                    android:text="600" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#EEEEEE"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:divider="#EEEEEE"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/calculate_tip_style"
                    android:maxLines="1"
                    android:text="其它" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/p5"
                    style="@style/calculate_edit_style"
                    android:text="1000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:divider="#EEEEEE"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/calculate_tip_style"
                    android:text="轻收佣金" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/p6"
                    style="@style/calculate_edit_style"
                    android:text="600" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#EEEEEE"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:divider="#EEEEEE"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/calculate_tip_style"
                    android:text="加班费" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/p7"
                    style="@style/calculate_edit_style"
                    android:text="2400" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:divider="#EEEEEE"
                android:orientation="horizontal"
                android:visibility="invisible">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/calculate_tip_style"
                    android:text="" />

                <androidx.appcompat.widget.AppCompatEditText
                    style="@style/calculate_edit_style"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:background="#DD1C07"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:onClick="onclick"
            android:text="计算"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            tools:ignore="UnusedAttribute" />
    </LinearLayout>
</LinearLayout>